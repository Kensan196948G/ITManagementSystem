# テスト環境用の設定
NODE_ENV=test
PORT=3001

# JWT設定
JWT_SECRET=test-secret-key
JWT_EXPIRES_IN=1h

# データベース設定
MONGODB_URI=mongodb://localhost:27017/it-ops-test

# Active Directory設定
AD_URL=ldap://localhost:389
AD_BASE_DN=DC=example,DC=com
AD_USERNAME=admin
AD_PASSWORD=test-password
AD_DOMAIN=example.com

# Microsoft 365設定
M365_TENANT_ID=test-tenant-id
M365_CLIENT_ID=test-client-id
M365_CLIENT_SECRET=test-client-secret
M365_ACCESS_TOKEN=test-access-token

# 監視設定
MONITORING_CHECK_INTERVAL=300
MONITORING_RETENTION_DAYS=30
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=80
ALERT_THRESHOLD_DISK=80

# Redis設定（キャッシュ用）
REDIS_URL=redis://localhost:6379

# ログ設定
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/test.log

# テスト設定
TEST_TIMEOUT=5000